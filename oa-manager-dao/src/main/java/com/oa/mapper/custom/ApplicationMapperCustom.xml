<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.oa.mapper.custom.ApplicationMapperCustom">

	
	<!-- 查询用户是否存在  -->
	<select id="findApplicationByleaderid" parameterType="java.lang.Integer"
		resultType="com.oa.pojo.Application">
		SELECT *
		FROM 
			application
		WHERE 
			id
		IN (
			SELECT approval.appid
			FROM
				approval
			WHERE
				leaderid = #{leaderid}
			)
	</select>
	
	<insert id="insertappAndGetId" useGeneratedKeys="true" keyProperty="id" parameterType="com.oa.pojo.Application">  
	    insert into 
	   		application 
	    	(userid,type,status,applytime,reason,days,leaderlist,num)  
	    values
	    	(#{userid},#{type},#{status},#{applytime},#{reason},#{days},#{leaderlist},#{num})  
	</insert> 
	
</mapper>